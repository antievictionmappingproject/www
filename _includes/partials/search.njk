<form is="search-form" data-input-selector="#search" method="get" action="/search" class="search-form">
  <div role="search">
    <label for="search" aria-label="Search for:">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" viewBox="0 0 16 16" focusable="false">
        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
      </svg>
    </label>
    <search-input {% if locale -%} data-src="/{{locale}}/search-data.json" {%- endif %}>
      <input class="search-input" type="text" value="" name="q" id="search" placeholder="Search for an article"/>
    </search-input>
    <button aria-label="Submit search" type="submit" class="unstyle">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" viewBox="0 0 16 16" focusable="false">
        <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
      </svg>
    </button>
  </div>
</form>
